<h1>New Meeting</h1>

<%= form_tag(meetings_url, method: 'post') do %>
  <div>
    <%= label_tag :held_on %><br />
    <%= text_field_tag :held_on %>
  </div>
  
  <div>
	<select name="course_id">
		<% @courses.each do |course| %>
			<%= "<option value=" + course["id"].to_s + ">" + course["title"] + "</option>" %>
		<% end %>


		<option value="1">KIEI925 Lecture</option>
		<option value="2">KIEI925 Discussion</option>
		<option value="3"> KIEI925 Office Hours</option>
	</select>
  </div>

  <div>
    <%= submit_tag "Create Meeting" %>
  </div>
<% end %>
